    galleries: {
      about: <%= raw Dir.glob('app/assets/images/gallery/about/*').map { |p| image_url p.split('/')[-3..-1].join('/') }.shuffle %>,
      avalon: <%= raw Dir.glob('app/assets/images/gallery/avalon/*').map { |p| image_url p.split('/')[-3..-1].join('/') }.shuffle %>,
      montagu: <%= raw Dir.glob('app/assets/images/gallery/montagu/*').map { |p| image_url p.split('/')[-3..-1].join('/') }.shuffle %>
    },
    contact: {
      valid: false,
      name: '',
      email: '',
      message: ''
    }
  },
  methods: {
    scroll(id) {
      this.$vuetify.goTo(`#${id}`, { offset: -80 })
    },
    galleryToggle(gallery, index) {
      switch (gallery) {
        case 'about':
          this.viewingAboutGallery = true
          this.aboutGalleryIndex = index
          break;
        case 'avalon':
          this.viewingAvalonGallery = true
          this.avalonGalleryIndex = index
          break;
        case 'montagu':
          this.viewingMontaguGallery = true
          this.montaguGalleryIndex = index
          break;
      }
    }
  }
})
</script>
